
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oscar.llega_y_zampa.Categorias"
    android:background="@drawable/fondo"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categorias"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="#ffea7324"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/atras"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circulo"
        android:src="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="216dp" />

    <ImageButton
        android:id="@+id/cangrejo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/atras"
        android:layout_alignLeft="@+id/baquita"
        android:layout_alignStart="@+id/baquita"
        android:background="@drawable/ovalo"
        android:src="@drawable/cangrejo"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageButton
        android:id="@+id/jugo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/porciones"
        android:layout_alignStart="@+id/porciones"
        android:layout_below="@+id/atras"
        android:background="@drawable/ovalo"
        android:src="@drawable/bebida"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="353dp" />

    <ImageButton
        android:id="@+id/baquita"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/jugo"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:background="@drawable/ovalo"
        android:src="@drawable/baquita"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageButton
        android:id="@+id/porciones"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/cangrejo"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:background="@drawable/ovalo"
        android:src="@drawable/porcion"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="354dp" />



</RelativeLayout>